# Sample .env file for Archivematica integration

# Chave de autenticação para a API do Archivematica (formato: user:api_key)
AM_API_KEY=admin:your_am_api_key_here

# URL da API principal do Archivematica
AM_API_URL=http://10.10.10.20:80

# URL do serviço de armazenamento do Archivematica (Storage Service)
AM_STORAGE_SERV_URL=http://10.10.10.20:8000

# Diretório local de upload (Windows)
UPLOAD_DIR=C:\Users\your_username\Documents\archivematica-vagrant\uploads

# Caminho remoto de upload visível pelo Archivematica
REMOTE_UPLOAD_DIR=/uploads/

# Caminho completo no sistema remoto usado pelo Archivematica
REMOTE_UPLOAD_FULL_DIR=/home/local-transfers/uploads

# UUID da localização configurada no Archivematica Storage Service
LOCATION_UUID=your_location_uuid_here

# Exemplo de URL de conexão com o banco de dados PostgreSQL com valores padrão do docker compose
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/documents_db"

# URL de conexão com o banco de dados PostgreSQL com valores para substituir
DATABASE_URL="postgresql://<username>:<password>@localhost:5432/<your_database>"

